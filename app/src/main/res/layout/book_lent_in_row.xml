    <TextView
        android:id="@+id/textViewDateLentInPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:maxLines="5"
        android:text="Person Name"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/lentInDate"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_below="@id/textViewDateLentInPerson"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:text="Lent In Date :  "
        android:layout_marginTop="@dimen/_9sdp"
        android:textSize="@dimen/_11sdp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDateLentInPerson"
        android:layout_toRightOf="@id/lentInDate"
        android:layout_marginTop="@dimen/_9sdp"
        android:text="LentDate"
        android:maxLines="5"
        android:layout_marginLeft="@dimen/_5sdp"
        android:id="@+id/textViewLentInDate"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/black"/>

</RelativeLayout>

